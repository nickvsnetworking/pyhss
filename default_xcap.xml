<!--This is the default iFC template used by PyHSS, variables come from the Jinja2 template passed inside diameter.py where you can additional variables if required -->
<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<Sh-Data>
    <!-- This provides the Public Identifiers to the Application Server -->
    <PublicIdentifiers>
        <IMSPublicIdentity>sip:1{{ iFC_vars['imsi'][-4:] }@ims.mnc580.mcc310.3gppnetwork.org</IMSPublicIdentity>
        <MSISDN>1{{ iFC_vars['imsi'][-4:] }</MSISDN>
    </PublicIdentifiers>

    <!-- This optional extension provides the Location of the serving MME for this subscriber and the TAC for the ULA -->
    <Extension>
        <EPSLocationInformation>
            <E-UTRANCellGlobalId>' + str(UTRANCellGlobalId) + '</E-UTRANCellGlobalId>
            <TrackingAreaId>' + str(TrackingAreaId) + '</TrackingAreaId>
            <MMEName>' + str(subscriber_location) + '</MMEName>
            <AgeOfLocationInformation>0</AgeOfLocationInformation>
            <Extension>
                <VisitedPLMNID>' + str(VisitedPLMNID) + '</VisitedPLMNID>
            </Extension>
        </EPSLocationInformation>
    </Extension>

    <!-- This container for the XCAP Data for the Subscriber -->
    <RepositoryData>
        <ServiceIndication>ApplicationServer</ServiceIndication>
        <SequenceNumber>0</SequenceNumber>
        <ServiceData>
            <!-- This is the actual XCAP Data for the Subscriber -->
            <simservs xmlns="http://uri.etsi.org/ngn/params/xml/simservs/xcap" xmlns:cp="urn:ietf:params:xml:ns:common-policy">
                <originating-identity-presentation active="true" />
                <originating-identity-presentation-restriction active="true">
                    <default-behaviour>presentation-not-restricted</default-behaviour>
                </originating-identity-presentation-restriction>
                <communication-diversion active="true">
                    <!-- No Answer Time -->
                    <NoReplyTimer>20</NoReplyTimer>
                    <cp:ruleset>
                        <!-- Call Forward All Rule -->
                        <cp:rule id="rule0">
                            <cp:conditions>
                                <communication-diverted />
                            </cp:conditions>
                            <cp:actions>
                                <forward-to>
                                    <target>sip:1{{ iFC_vars['imsi'][-4:] }}@ims.mnc{{ iFC_vars['mnc'] }}.mcc{{ iFC_vars['mcc'] }}.3gppnetwork.org</target>
                                </forward-to>
                            </cp:actions>
                        </cp:rule>
                        <!-- Call Forward Not Registered Rule -->
                        <cp:rule id="rule1">
                            <cp:conditions>
                                <not-registered />
                            </cp:conditions>
                            <cp:actions>
                                <forward-to>
                                    <target>sip:1{{ iFC_vars['imsi'][-4:] }}@ims.mnc{{ iFC_vars['mnc'] }}.mcc{{ iFC_vars['mcc'] }}.3gppnetwork.org</target>
                                </forward-to>
                            </cp:actions>
                        </cp:rule>
                        <!-- Call Forward No Answer Rule -->
                        <cp:rule id="rule2">
                            <cp:conditions>
                                <no-answer />
                            </cp:conditions>
                            <cp:actions>
                                <forward-to>
                                    <target>sip:1{{ iFC_vars['imsi'][-4:] }}@ims.mnc{{ iFC_vars['mnc'] }}.mcc{{ iFC_vars['mcc'] }}.3gppnetwork.org</target>
                                </forward-to>
                            </cp:actions>
                        </cp:rule>
                        <!-- Call Forward Busy Rule -->
                        <cp:rule id="rule3">
                            <cp:conditions>
                                <busy />
                            </cp:conditions>
                            <cp:actions>
                                <forward-to>
                                    <target>sip:1{{ iFC_vars['imsi'][-4:] }}@ims.mnc{{ iFC_vars['mnc'] }}.mcc{{ iFC_vars['mcc'] }}.3gppnetwork.org</target>
                                </forward-to>
                            </cp:actions>
                        </cp:rule>
                        <!-- Call Forward Unreachable Rule -->
                        <cp:rule id="rule4">
                            <cp:conditions>
                                <not-reachable />
                            </cp:conditions>
                            <cp:actions>
                                <forward-to>
                                    <target>sip:1{{ iFC_vars['imsi'][-4:] }@ims.mnc{{ iFC_vars['mnc'] }}.mcc{{ iFC_vars['mcc'] }}.3gppnetwork.org</target>
                                </forward-to>
                            </cp:actions>
                        </cp:rule>
                    </cp:ruleset>
                </communication-diversion>
            
                <incoming-communication-barring active="true">
                    <cp:ruleset>
                        <cp:rule id="rule0">
                            <cp:conditions />
                            <cp:actions>
                                <allow>true</allow>
                            </cp:actions>
                        </cp:rule>
                    </cp:ruleset>
                </incoming-communication-barring>

                <outgoing-communication-barring active="false">
                </outgoing-communication-barring>
            </simservs>

        </ServiceData>
    </RepositoryData>

</Sh-Data>